<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CarListApp.Maui.Features.Cars.Views.CarEditPage"
             xmlns:viewmodel="clr-namespace:CarListApp.Maui.Features.Cars.ViewModels"
             xmlns:constants="clr-namespace:CarListApp.Maui.Core.Constants"
             x:DataType="viewmodel:CarEditViewModel"
             BackgroundColor="White"
             Title="{Binding IsNew, Converter={StaticResource BoolToStringConverter}, ConverterParameter='New Car|Edit Car'}">

    <Grid RowDefinitions="*, Auto" 
          RowSpacing="0"
          BackgroundColor="White">
        
        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="25" 
                               Padding="20"
                               VerticalOptions="Center"
                               HorizontalOptions="Fill"
                               MaximumWidthRequest="600">
                
                <!-- Make Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Make"
                           TextColor="#1C375C"
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding Make}"
                           TextColor="#1C375C"
                           BackgroundColor="Transparent"
                           HeightRequest="45"
                           Placeholder="Enter make"
                           PlaceholderColor="#999999"/>
                </VerticalStackLayout>

                <!-- Model Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Model"
                           TextColor="#1C375C"
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding Model}"
                           TextColor="#1C375C"
                           BackgroundColor="Transparent"
                           HeightRequest="45"
                           Placeholder="Enter model"
                           PlaceholderColor="#999999"/>
                </VerticalStackLayout>

                <!-- VIN Input -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="VIN"
                           TextColor="#1C375C"
                           FontAttributes="Bold"/>
                    <Entry Text="{Binding Vin}"
                           TextColor="#1C375C"
                           BackgroundColor="Transparent"
                           HeightRequest="45"
                           Placeholder="Enter VIN"
                           PlaceholderColor="#999999"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Action Buttons -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*" 
              ColumnSpacing="15"
              Padding="20"
              BackgroundColor="White">
            
            <!-- Save Button -->
            <Button 
                Grid.Column="0"
                Command="{Binding SaveCommand}"
                Text="&#xf0c7;"
                FontFamily="FontAwesomeSolid"
                TextColor="White"
                BackgroundColor="#6B4EFF"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="50"
                HorizontalOptions="End">
                <Button.Shadow>
                    <Shadow Brush="#6B4EFF"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.3"/>
                </Button.Shadow>
            </Button>

            <!-- Cancel Button -->
            <Button 
                Grid.Column="1"
                Command="{Binding CancelCommand}"
                Text="&#xf00d;"
                FontFamily="FontAwesomeSolid"
                TextColor="White"
                BackgroundColor="#FF3B30"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="50"
                HorizontalOptions="Start">
                <Button.Shadow>
                    <Shadow Brush="#FF3B30"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.3"/>
                </Button.Shadow>
            </Button>
        </Grid>
    </Grid>

</ContentPage> 