<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Login Page Styles -->
    <Style x:Key="LoginCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" />
        <Setter Property="Margin" Value="20" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <Style x:Key="LoginEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
        <Setter Property="Margin" Value="0,10" />
    </Style>

    <Style x:Key="LoginButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,20,0,0" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- Car List Page Styles -->
    <Style x:Key="CarListRefreshView" TargetType="RefreshView">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" />
    </Style>

    <Style x:Key="CarItemFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Margin" Value="15,7.5" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <Style x:Key="CarItemTitle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
    </Style>

    <!-- Profile Page Styles -->
    <Style x:Key="ProfileAvatar" TargetType="Frame">
        <Setter Property="HeightRequest" Value="100" />
        <Setter Property="WidthRequest" Value="100" />
        <Setter Property="CornerRadius" Value="50" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0,20" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="ProfileUserName" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
    </Style>

    <Style x:Key="ProfileSection" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Margin" Value="15,7.5" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <!-- Loading Overlay Styles -->
    <Style x:Key="PageLoadingOverlay" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" />
        <Setter Property="Opacity" Value="0.9" />
    </Style>

    <Style x:Key="LoadingIndicator" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="WidthRequest" Value="50" />
    </Style>

    <!-- Common View Styles -->
    <Style x:Key="PageTitle" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="15,20" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
    </Style>

    <Style x:Key="SectionTitle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
    </Style>

    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="25" />
    </Style>

    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Danger}" />
    </Style>

    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
        <Setter Property="FontFamily" Value="FontAwesomeSolid" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="WidthRequest" Value="44" />
        <Setter Property="HeightRequest" Value="44" />
    </Style>
</ResourceDictionary> 